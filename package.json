{
  "name": "busee",
  "version": "1.0.0",
  "description": "Online Bus Booking System",
  "private": true,
  "scripts": {
    "build:watch": "tsc --watch",
    "build": "rimraf ./build && tsc",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "start:dev": "nodemon src/index.ts",
    "start:prod": "node build/index.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|js|json)\"",
    "format:check": "prettier --ignore-path .gitignore --list-different \"**/*.+(ts|js|json)\"",
    "audit-ci": "audit-ci  --allowlist 1002477 --high --report-type full",
    "prepare": "husky install",
    "pretest": "npm run drop-table:test && npm run create-table:test",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli.js $*",
    "db:drop": "npm run typeorm-cli schema:drop",
    "db:create": "npm run typeorm:cli -- migration:run",
    "db:migrate:win-run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "db:migrate": "npm run typeorm-cli migration:run",
    "db:migrate:revert": "npm run typeorm-cli migration:revert",
    "db:migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -d src/database/migrations -n "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/desirekaleba/busee.git"
  },
  "keywords": [],
  "author": "Desire Kaleba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/desirekaleba/busee/issues"
  },
  "homepage": "https://github.com/desirekaleba/busee#readme",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "rimraf": "^3.0.2",
    "twilio": "^3.71.1",
    "typeorm": "^0.2.38",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^4.4.4",
    "winston": "^3.3.3",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "audit-ci": "^5.1.2",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.js": "eslint"
  }
}